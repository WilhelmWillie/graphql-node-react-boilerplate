{
  "name": "server",
  "version": "1.0.0",
  "description": "Node.js + Express server for boilerplate",
  "main": "app.js",
  "scripts": {
    "start": "yarn run build && node dist/app.js",
    "build": "babel app.js schema.js ./models ./resolvers ./typeDefs -d dist",
    "dev": "npx nodemon --exec babel-node server.js",
    "db": "mongod --dbpath=./db",
    "babel:clear": "rm -rf ./node_modules/.cache/@babel",
    "test": "mocha --require @babel/register 'test/*.test.js' --exit"
  },
  "author": "Wilhelm Willie",
  "license": "ISC",
  "dependencies": {
    "@babel/runtime": "^7.4.5",
    "express": "^4.17.1",
    "express-graphql": "^0.8.0",
    "global": "^4.3.2",
    "graphql": "^14.3.1",
    "graphql-import": "^0.7.1",
    "graphql-tools": "^4.0.4",
    "lodash": "^4.17.11",
    "mongoose": "^5.5.11",
    "passport": "^0.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "babel-plugin-import-graphql": "^2.7.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "husky": "^2.3.0",
    "mocha": "^6.1.4",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.11.0",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
